{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2021"
    ],
    "paths": {
      "@/*": ["../src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./src/",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "build",
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
  ]
}
